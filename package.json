{
  "name": "obsidian-palace-mcp",
  "version": "2.0.0",
  "description": "MCP server that turns your Obsidian vault into an AI memory palace with intent-based storage, multi-vault support, and atomic notes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "obsidian-palace-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js",
    "start:http": "HTTP_ENABLED=true node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:fast": "vitest run --reporter=dot",
    "test:unit": "vitest run tests/unit --reporter=dot",
    "test:integration": "vitest run tests/integration --reporter=dot",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js"
  },
  "keywords": [
    "mcp",
    "obsidian",
    "ai",
    "memory",
    "knowledge-base",
    "model-context-protocol",
    "claude",
    "chatgpt",
    "llm",
    "multi-vault",
    "atomic-notes",
    "intent-based-storage",
    "ai-memory",
    "wiki-links"
  ],
  "author": "Probably Computers <adam@probablycomputers.co.za>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/AdamClaassens/obsidian-palace-mcp.git"
  },
  "bugs": {
    "url": "https://gitlab.com/AdamClaassens/obsidian-palace-mcp/-/issues"
  },
  "homepage": "https://gitlab.com/AdamClaassens/obsidian-palace-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "yaml": "^2.8.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "@types/yaml": "^1.9.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
